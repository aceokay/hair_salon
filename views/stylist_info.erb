<h3><%= @stylist.name() %></h3>
<% if @clients.empty? %>
  <h4>This stylist has zero clients</h4>
<% else %>
<h4>clients:</h4>
 <div>
   <ul>
     <% @clients.each do |client| %>
       <li><a href="/stylists/<%= client.id() %>"><%= client.name() %></a></li>
     <% end %>
   </ul>
 </div>
<% end %>
<h4>Update Stylist <%= @stylist.name() %></h4>
<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename your stylist:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update</button>
</form>
<form action="/stylist/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Stylist</button>
</form>
<a href="/">Home</a>
